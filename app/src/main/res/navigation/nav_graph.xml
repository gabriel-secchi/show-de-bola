<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FragmentSplashScreen">

    <fragment
        android:id="@+id/FragmentSplashScreen"
        android:name="com.gma.showdebola.view.SplashScreenFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_Splash_To_Team_List"
            app:destination="@id/FragmentTeamList" />
        <action
            android:id="@+id/action_Splash_To_Team_Detail"
            app:destination="@id/FragmentTeamList" />
    </fragment>

    <fragment
        android:id="@+id/FragmentTeamList"
        android:name="com.gma.showdebola.view.teams.TeamListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_team_list">

    </fragment>

</navigation>